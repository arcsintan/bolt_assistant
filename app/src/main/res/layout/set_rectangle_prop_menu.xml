<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:columnCount="2"
    android:orientation="horizontal"
    android:columnOrderPreserved="false">

    <TextView
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_columnWeight="0"
        android:layout_gravity="left|fill_horizontal"
        android:paddingBottom="8dp"
        android:text="Set Rectangle Values"
        android:textSize="13pt"
        android:background="@color/light_blue"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Width"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Height"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/width_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/height_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/date_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/time_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Category"
        android:textColor="#000000"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Km"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/km_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price per Km"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/price_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/price_per_km_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pickup Location"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dropoff Location"
        android:paddingBottom="8dp"
        android:textColor="#000000"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/pickup_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/happy_green"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginEnd="3mm"
        android:layout_columnWeight="1" />

    <EditText
        android:id="@+id/dropoff_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/happy_red"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginStart="3mm"
        android:layout_columnWeight="1" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_columnWeight="1" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_columnWeight="1" />
</GridLayout>
